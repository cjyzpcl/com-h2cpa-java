<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="permission" namespace="/permission" extends="json-default">
		<interceptors>
			<interceptor name="PermissionInterceptor" class="com.funtl.permission.interceptor.PermissionInterceptor"></interceptor>
			<interceptor-stack name="FuntlInterceptor">
				<interceptor-ref name="PermissionInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<global-results>
			<result name="Exception">/h2cpa/exception.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="Exception" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
	
		<!-- 权限管理 -->
	
		<action name="manage/action/*" class="com.h2cpa.hs.action.PermissionAction" method="{1}">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
		<!-- 用户管理 -->
		
		<action name="user/action/*" class="com.funtl.permission.action.PerUserAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
		<!-- 分组管理 -->
		
		<action name="group/action/*" class="com.funtl.permission.action.PerGroupAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="group/action/queryArray/*" class="com.funtl.permission.action.PerGroupAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">resultArray</param>
			</result>
		</action>
		
		<!-- 分栏管理 -->
		
		<action name="menu/action/*" class="com.funtl.permission.action.PerMenuAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
	</package>
</struts>