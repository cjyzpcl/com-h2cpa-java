<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="article" namespace="/article" extends="json-default">
		<interceptors>
			<interceptor name="PermissionInterceptor" class="com.funtl.permission.interceptor.PermissionInterceptor"></interceptor>
			<interceptor-stack name="FuntlInterceptor">
				<interceptor-ref name="PermissionInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<global-results>
			<result name="Exception">/exception.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="Exception" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
	
		<!-- 分类管理 -->
		
		<action name="category/action/*" class="com.funtl.article.action.ArtCategoryAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="category/action/queryArray/*" class="com.funtl.article.action.ArtCategoryAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">resultArray</param>
			</result>
		</action>
		
		<!-- 文章管理 -->
		
		<action name="info/action/*" class="com.funtl.article.action.ArtInfoAction" method="{1}">
			<interceptor-ref name="FuntlInterceptor"></interceptor-ref>
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">result</param>
			</result>
		</action>
		
	</package>
</struts>